{
  "manifest_version": 3,
  "name": "Bilibili 屏蔽插件合集",
  "version": "2.2",
  "description": "屏蔽 Bilibili 播放页和搜索页的多余元素，带控制面板开关。",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["*://www.bilibili.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.bilibili.com/video/*"],
      "js": ["mask.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://search.bilibili.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}